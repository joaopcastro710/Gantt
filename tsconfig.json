{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "jsx": "preserve",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./resources/js",
      "paths": {
        "@/*": ["*"]
      }
    },
    "include": [
      "resources/js/**/*.ts",
      "resources/js/**/*.vue"
    ],
    "exclude": [
      "node_modules",
      "public"
    ]
  }