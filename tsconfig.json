{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true
  },
  "include": [
    "./resources/js/**/*.js",
    "./resources/js/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "public"
  ]
}
